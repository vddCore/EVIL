fn main(args) {
  var order = 4;

  if (#args) {
    order = str.s2n(args[0]);
  }

  var size = 1 << order;
  
  for (var y = size - 1; y >= 0; y--, io.println()) {
    for (var i = 0; i < y; i++) {
      io.print(" ");
    }

    for (var x = 0; x + y < size; x++) {
      if (x & y) { io.print("  "); }
      else { io.print("* "); }
    }
  }

  io.println();
}
