#[test(10)]
fn while_simple() {
  rw var a = 0;
  
  while (a != 10) {
    a++;
  }
  
  ret a;
}

#[test(5)]
fn while_break() {
  rw var a = 0;
  
  while (a != 10) {
    a++;
    
    if (a == 5) {
      break;
    }
  }
  
  ret a;
}

#[test(2)]
fn while_skip() {
  rw var a = 10;
  
  while (a--) {
    if (a > 2) {
      skip;
    }

    ret a;
  }
}

#[test(0)] 
fn while_false() {
  rw var a = 0;
  
  while (false) {
    a = 10;
  }
  
  ret a;
}

#[test]
fn while_nested() {
  rw var a = 10, b, c;
  
  while (a) {
    a--;
    b = 10;
    
    while (b) {
      b--;
      c = 10;
      while (c) {
        c--;
      }
    }
  }
  
  ret !a && !b && !c;
}