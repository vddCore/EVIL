fn nested_closure_captures_closure_local() {
    var a = 111;
    
    var f = fn() {
        var a = 21;
        ret fn() { ret a + .37; };
    };
    
    ret f()();
}

#[test(21.37);approximate(2)]
fn nested_closure_captures_closure_parameter() {
