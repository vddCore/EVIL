var global_n;
fn assign_gn() {
  global_n = 1;
  assert.equal(global_n, 1);
}

var global_s;
fn assign_gs() {
  global_s = "hello, world";
  assert.equal(global_s, "hello, world");
}

fn assign_ln() {
  var a = 10;
  assert.equal(a, 10);

  a += 10;
  assert.equal(a, 20);

  a -= 5;
  assert.equal(a, 15);

  a /= 3;
  assert.equal(a, 5);

  a *= 9;
  assert.equal(a, 27);

  a = 3 % 2;
  assert.equal(a, 1);
}

fn assign_ls() {
  var a = "test string 123";
  assert.equal(a, "test string 123");
}
