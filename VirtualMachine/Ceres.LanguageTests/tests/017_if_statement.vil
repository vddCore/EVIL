#[test(1)]
fn if_condition_simple() {
  if (true) { ret 1; }
}

#[test(2)]
fn if_else() {
  if (false) { ret 1; }
  else { ret 2; }
}

#[test(3)] 
fn if_elif_else() {
  if (1 == 2) { ret 1; }
  elif (2 == 3) { ret 2; }
  else { ret 3; }
}

#[test(21.37)]
fn only_first_true_elif_is_executed() {
  if (1 == 2) { ret 1; }
  elif (3 - 1 == 2) { ret 21.37; }
  elif (true) { ret 11.11; }
  elif (@true) { ret "something went terribly wrong"; }
  else { ret "better fix that parser, sis..."; }
}

#[test(3)]
fn if_elif_else_implicit_ret() {
  if (1 == 2) -> 1;
  elif (2 == 3) -> 2;
  else -> 3;
}